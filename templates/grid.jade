.atk-table(id="{$_name}")

    // Pannel goes here

    {Pannel}
    .atk-cells.atk-cells-gutter-large.atk-padding-small(class="{$pannel_class}")
        .atk-cell.atk-jackscrew.atk-actions
            {$grid_buttons}
        .atk-cell
            {$quick_search}
    {Pannel}


    table
        {header}
        thead
            {cols}{col}
            th
                {$descr} {$sort}
            {/}{/}
        {/}
        {$subheader}

        tbody
            {rows}{row}
            tr(class="{$odd_even}" data-id="{$row_id}")
                {cols}{col}
                <td {$tdparam}>
                {$content}
                </td>
                {/}{/}
            {/}{/}

            {totals}
            tr(class="totals")
                {cols}{col}
                <td {$tdparam}>
                {$content}
                </td>
                {/}{/}
            {/}
    {not_found}{$not_found_message}{/}
    {$paginator}
