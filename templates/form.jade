.atk-form(style="{$style}" class="{$class}" id="{$_name}")
    <form action="{$form_action}" method="{form_method}post{/}" {$enctype} {$attributes}>

    {Layout}
    div.atk-form-fieldset
        {Content}
        {form_line}
        div.atk-form-row.atk-cells.atk-cells-gutter-large(class="atk-form-row-{$field_type} {$row_class}")
            .atk-cell.atk-form-label
                <label for="{$field_name}" {field_mandatory}class="mandatory"{/}>
                span {$field_caption}
                {$after_label}
                </label>

            .atk-cell.atk-form-field.atk-jackscrew(class="{$field_class}")
                {$before_field}{$input_row_start}{$before_input}
                {$field_input}
                {$after_input}{$input_row_stop}{$after_field}

            {$field_hint}
            {field_error}

            .atk-form-error
                span.atk-size-micro atk-effect-danger {$field_error_str}
            {/}

        {/}

        {/Content}
        .field-error-template.atk-form-error
            span.atk-effect-danger.field-error-text {$field_error_str}


    {button_row}
    .atk-cells.atk-cells-gutter-large
        .atk-cell
        .atk-cell.atk-actions(class="{$buttons_class}")
            {$form_buttons}
    {/}

    {/Layout}
    </form>
